{
  "name": "thistogram",
  "version": "2.0.0",
  "description": "A simple text based histogram and chart generator",
  "type": "module",
  "packageManager": "pnpm@10.12.4+sha512.5ea8b0deed94ed68691c9bad4c955492705c5eeb8a87ef86bc62c74a26b037b08ff9570f108b2e4dbd1dd1a9186fea925e527f141c648e85af45631074680184",
  "module": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc -p .",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "clean": "rm -rf coverage dist",
    "lint": "pnpm eslint && pnpm prettier",
    "lint:fix": "pnpm eslint:fix && pnpm prettier:fix",
    "prettier": "prettier -c .",
    "prettier:fix": "prettier -w .",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "spell": "cspell --no-progress .",
    "run:samples": "cd samples && pnpm add .. && pnpm run:samples",
    "update-readme": "pnpm run:samples && inject-markdown README.md"
  },
  "keywords": [
    "histogram",
    "Unicode"
  ],
  "author": "Street Side Software",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tsconfig/node20": "^20.1.6",
    "@vitest/coverage-istanbul": "^3.2.4",
    "cspell": "^9.1.2",
    "eslint": "^9.30.1",
    "eslint-plugin-n": "^17.21.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "inject-markdown": "^4.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "!**/*.test.*",
    "!**/*.map.*"
  ],
  "engines": {
    "node": ">=20.18.0"
  }
}
